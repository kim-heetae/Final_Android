<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mainpage.MainActivity"
    android:layout_margin="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            app:srcCompat="@drawable/mainlogo" />

        <Space
            android:layout_width="match_parent"
            android:layout_weight="6.5"
            android:layout_height="wrap_content" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/main_tv_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="100001"
                    android:textStyle="bold"
                    />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3" />

                <TextView
                    android:id="@+id/main_tv_dept"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="인사과"
                    android:textStyle="bold"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/main_tv_ename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="홍길동"
                    android:textStyle="bold"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/main_tv_pos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="사원"
                    android:textStyle="bold"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="39dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/main_tab_board"
            android:layout_width="197dp"
            android:layout_height="31dp">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공지사항"
                android:textStyle="bold"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업무"
                android:textStyle="bold"/>

        </com.google.android.material.tabs.TabLayout>

        <TextView
            android:id="@+id/main_tv_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center"
            android:text="▶더보기" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_board_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="7"

                android:gravity="center"
                android:text="제목"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/main_board_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="작성자"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/main_board_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="작성일"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/main_title_1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="7"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_date_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/main_title_2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="7"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_name_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_date_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/main_title_3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="7"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_name_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_date_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_title_4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="7"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_name_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_date_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/main_title_5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="7"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_name_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_date_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/main_title_6"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="7"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_name_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_date_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_title_7"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="7"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_name_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_date_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="TextView" />
        </TableRow>
    </TableLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="67dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2.5"
            >

            <ImageView
                android:id="@+id/main_icon_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_calendar"
                android:layout_weight="7"/>

            <TextView
                android:id="@+id/main_tv_calendar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="일정관리"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="2.5">

            <ImageView
                android:id="@+id/main_icon_attend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_attend"
                android:layout_weight="7"/>

            <TextView
                android:id="@+id/main_tv_attend"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="근태관리"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2.5">

            <ImageView
                android:id="@+id/main_icon_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_info"
                android:layout_weight="7"/>

            <TextView
                android:id="@+id/main_tv_info"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="내정보관리"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2.5">

            <ImageView
                android:id="@+id/main_icon_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_chat"
                android:layout_weight="7"/>

            <TextView
                android:id="@+id/main_tv_chat"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="채팅"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>