                android:gravity="center"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/main_title_5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="7"
                android:gravity="center"
                android:text="TextView" />

            <TextView
